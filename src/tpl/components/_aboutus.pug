mixin navmenu(menu_items)
    nav.AboutUs(role="navigation")
        ul
            each item in menu_items
                if item.title == current
                    li( class=[ '', '', 'active' ])
                        a( href = item.link )
                            =item.title
                else
                    li( class=[ item.title+'Btn', '' ])
                        a( href=item.link )
                            =item.title

+navmenu([
    { 'title': 'Sobre Nosotros',  'link': './about.html'},
    { 'title': 'Nuestros Patinetes',  'link': './nuestros-patinetes.html'},
    { 'title': 'Nuestra Gente',  'link': './nuestra-gente.html'},
    { 'title': 'Donde Probar',  'link': './donde-probar.html'}
])
